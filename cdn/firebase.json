{
    "hosting": {
        "site": "pathika-cdn",
        "public": "public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "headers": [
            {
                "source": "**",
                "headers": [
                    {
                        "key": "Access-Control-Allow-Origin",
                        "value": "https://pathika.litedevs.com"
                    },
                    {
                        "key": "Access-Control-Allow-Credentials",
                        "value": "true"
                    }
                ]
            }
        ]
    }
}